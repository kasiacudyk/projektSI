{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_task_list'|trans }}
{% endblock %}

{% block body %}
    {{ include('menu.html.twig') }}

    <h1>{{ 'title_task_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    {% block header %}
        <h1>{{ 'virtual_note'|trans }}</h1>
    {% endblock %}

    <h2>{{ 'title_task_list'|trans }}</h2>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'to_do_list.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'to_do_list.title') }}</th>
                <th>{{ 'label_tags'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for to_do_list in pagination.items %}
                <tr>
                    <td>{{ to_do_list.id }}</td>
                    <td>{{ to_do_list.title }}</td>
                    <td>
                        {% if to_do_list.tags is defined and to_do_list.tags|length %}
                            {% for tags in to_do_list.tags %}
                                <a href="{{ url('todolist_index', {'filters.tags_id' : tags.id}) }}" title="{{ tags.name }}">
                                    {{ tags.name }}
                                </a>
                            {% endfor %}
                        {% else %}
                            Brak tagu.
                        {% endif %}
                    </td>
                    <td>
                        {% if is_granted('VIEW', to_do_list) %}
                        <a href="{{ url('todolist_show', {id: to_do_list.id}) }}" title="{{ 'button_view'|trans }}">
                            {{ 'button_view'|trans }}
                        </a>
                        {% endif %}
                        {% if is_granted('EDIT', to_do_list) %}
                            <a href="{{ url('todolist_edit', {id: to_do_list.id}) }}" title="{{ 'button_edit'|trans }}">
                                {{ 'button_edit'|trans }}
                            </a>
                        {% endif %}
                        <a href="{{ url('todolist_create', {id: to_do_list.id}) }}" title="{{ 'button_create'|trans }}">
                            {{ 'button_create'|trans }}
                        </a>
                        {% if is_granted('DELETE', to_do_list) %}
                            <a href="{{ url('todolist_delete', {id: to_do_list.id}) }}" title="{{ 'button_delete'|trans }}">
                                {{ 'button_delete'|trans }}
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}