{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_tags_delete'|trans({'%id%': tags.id|default('')}) }}
{% endblock %}

{% block body %}
    {% block header %}
        <h1>{{ 'virtual_note'|trans }}</h1>
    {% endblock %}

    {% include 'default/_form.html.twig' with {
        page_title: 'title_tags_delete',
        page_title_param: {'%id%': tags.id},
        attr: {
            method: 'DELETE',
            action: url('tags_delete', {'id': tags.id}),
        },
        form: form,
        submit_label: 'action_delete'|trans,
        back_to_list_path: 'tags_index',
    } %}
{% endblock %}